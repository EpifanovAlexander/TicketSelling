{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "comment": "Schema for refund ticket operation",
  "type": "object",
  "properties": {
    "operation_type": {
      "type": "string",
      "const": "refund"
    },
    "operation_time": {
      "type": "string",
      "format": "date-time"
    },
    "operation_place": {
      "type": "string"
    },
    "ticket_number": {
      "type": "string"
    }
  },
  "required": [
    "operation_type",
    "operation_time",
    "operation_place",
    "ticket_number"
  ],
  "additionalProperties": false
}